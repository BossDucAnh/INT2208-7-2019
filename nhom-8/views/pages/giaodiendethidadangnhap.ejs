	<script>
$('#submit').click(function() {
{
    var submit = $("button[type='submit']");
    var data = {
                    number: 1 ,
                    comment: 'hay'
                }
    submit.click(function()
    {
	$.ajax({
    url: 'pages/giaodiendethidadangnhap', 
    type: 'POST', 
	dataType: "json",
    contentType: 'application/json', 
	cache: false,
    data:  JSON.stringify(data)
	});
});
</script>
