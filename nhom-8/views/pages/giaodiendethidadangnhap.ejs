<%var id;%>;
	<div role="main" id="main">
		<div class="container-fluid">
			<section>
			<% results[0].forEach(function(result) { %>
				<div>
					<a href="<%=result.link%>" >
						<img src="<%=result.link%>" class="wraptocenter">
						<%id = result.id%>;
					</a>
				</div>
				<div class="text-center">
					<a href="<%=result.link%>" class="btn btn-primary btn-lg" download>
						Download <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
					</a>
				</div>
			<% }); %>
			</section>
		</div>
	</div>
	<%if (data && data.error) {%>
		<div id="error" class="alert alert-danger">
		<%=data.error%>
		</div>
	<%}%>
	<% results[0].forEach(function(result) { %>
	<div class="container ">
	<form id="comment" action="/giaodiendethidadangnhap/<%=result.id%>" method="POST">
			<div>
				<input type="text" name="texts" class="form-control" placeholder="Thêm bình luận...">
				<button id="comment" type="submit" class="btn btn-default pull-right"> Comment</button>
			</div>
	</form>
  </div>
  <% }); %>
		<% results[1].forEach(function(cm) { %>
		<div style="<% if(!cm){%> display: none <%}%>" class="alert alert-danger">
			<p> <h4><%=cm.firstname%> <%=cm.lastname%>:</h4> <%=cm.comment%></p>
		</div>
		<% }); %>
		
		
